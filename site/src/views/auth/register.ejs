<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ("../partials/head.ejs") %>
    </head>
    <body>
        <header> <%- include ("../partials/header.ejs") %> </header>
        <main>
            <!-- Section: Design Block -->
            <section class="text-center">
                <!-- Background image -->
                <div
                    class="p-5 bg-image"
                    style="background-image: url('/images/bg-login.jpg'); height: 300px"
                ></div>
                <!-- Background image -->

                <div
                    class="card mx-4 mx-md-5 shadow-5-strong"
                    style="
                        margin-top: -100px;
                        background: hsla(0, 0%, 100%, 0.8);
                        backdrop-filter: blur(20px);
                    "
                >
                   <section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px; background-color: white;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Formulario de registro</h3>
            <form 
              action="/register"
              method="POST"              
            >
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="nombre">Nombre</label>
                    <input 
                    type="text" 
                      id="nombre" 
                      class="form-control form-control-lg <%= 
                        locals.errors && errors.nombre 
                        ? 'is-invalid' 
                        : null 
                        %>"" 
                      name="nombre" 
                      value="<%= locals.oldData ? oldData.nombre : null %>" 
                      >
                      
                      <span class="error text-danger">
                         <% if (locals.errors && errors.nombre) { %>
                                 <%= errors.nombre.msg %>               
                         <% } %>                
                      </span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="apellido">Apellido</label>
                    <input 
                    type="text" 
                    id="apellido" 
                    class="form-control form-control-lg <%= 
                        locals.errors && errors.apellido 
                        ? 'is-invalid' 
                        : null 
                        %>" 
                      value="<%= locals.oldData ? oldData.apellido : null %>"
                      name=apellido
                      >
                      
                      <span class="error text-danger">
                        <% if (locals.errors && errors.apellido) { %>
                                <%= errors.apellido.msg %>               
                        <% } %>                
                     </span>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 ">

                  <div class="form-outline datepicker w-100">
                    <label for="telefono" class="form-label">Telefono</label>
                    <input 
                      type="text" 
                      class="form-control form-control-lg <%= 
                        locals.errors && errors.telefono 
                        ? 'is-invalid' 
                        : null 
                        %>" 
                      value="<%= locals.oldData ? oldData.telefono : null %>"
                      id="telefono" 
                      name="telefono"
                    >
                    
                    <span class="error text-danger">
                      <% if (locals.errors && errors.telefono) { %>
                              <%= errors.telefono.msg %>               
                      <% } %>                
                   </span>
                  </div>

                </div>
                <div class="col-md-6 mb-4">
                    <div class="form-outline datepicker w-100">
                      <label for="email" class="form-label">Email</label>                     
                      <input 
                        type="email" 
                        class="form-control form-control-lg <%= 
                          locals.errors && errors.email 
                          ? 'is-invalid' 
                          : null 
                          %>" 
                        value="<%= locals.oldData ? oldData.email : null %>" 
                        id="email" 
                        name="email" 
                      >
                      
                      <span class="error text-danger">
                        <% if (locals.errors && errors.email) { %>
                                <%= errors.email.msg %>               
                        <% } %>                
                     </span>
                  </div>               
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="password">Contraseña</label>
                    <input 
                      type="password" 
                      id="password" 
                      class="form-control form-control-lg <%= 
                        locals.errors && errors.password 
                        ? 'is-invalid' 
                        : null 
                        %>" 
                      value="<%= locals.oldData ? oldData.password : null %>" 
                      name="password" 
                    >
                    
                    <span class="error text-danger">
                      <% if (locals.errors && errors.password) { %>
                              <%= errors.password.msg %>               
                      <% } %>                
                   </span>
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="repPassword">Repita contraseña</label>
                    <input 
                      type="password" 
                      id="repPassword" 
                      class="form-control form-control-lg <%= 
                        locals.errors && errors.repPassword 
                        ? 'is-invalid' 
                        : null 
                        %>" 
                      value="<%= locals.oldData ? oldData.repPassword : null %>" 
                      name="repPassword" 
                    >
                    
                    <span class="error text-danger">
                      <% if (locals.errors && errors.repPassword) { %>
                              <%= errors.repPassword.msg %>               
                      <% } %>                
                   </span>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-12">

                 <div class="form-group">
    <label for="exampleFormControlSelect1">Provincia</label>
    <select class="form-control"  name="localidad" id="provincia">

      <option selected>Seleccione una opcion</option>

      <% if (provincias != undefined) { %> 
        <% provincias.forEach( provincia => { %>  
          <option value="<%= provincia.nombre %>"><%= provincia.nombre %></option>
        <% }) %> 
        <% } %> 

    </select>
    <span class="error text-danger">
      <% if (locals.errors && errors.localidad) { %>
              <%= errors.localidad.msg %>               
      <% } %>                
   </span>

    <label for="exampleFormControlSelect1">Localidad</label>
    <select class="form-control" name="localidad" id="localidad">

    </select>
    <span class="error text-danger">
      <% if (locals.errors && errors.localidad) { %>
              <%= errors.localidad.msg %>               
      <% } %>                
   </span>






  </div>
                </div>
              </div>

              <div class="mt-4 pt-2">
                <input class="btn btn-success btn-lg" type="submit" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
                    </div>
                </div>
            </section>
            <!-- Section: Design Block -->
        </main>
        <footer> <%- include ("../partials/footer.ejs") %></footer>
        <script src="/js/registerScript.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
