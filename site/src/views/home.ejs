    <body>
        <header> <%- include ("./partials/header.ejs") %> </header>

        <%- include ("./partials/home/home-search.ejs") %>

        <!-- CARDS -->
        <%- include ("./partials/home/home-cards.ejs") %>

        <div class="row flex-lg-row-reverse align-items-center g-4 py-5 container-fluid">
